{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "removeComments": false,
    "noLib": false,
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "types": ["node"],
    "paths": {
      "lithia/cli": ["./src/cli"],
      "lithia/config": ["./src/config"],
      "lithia/core": ["./src/core"],
      "lithia/meta": ["./src/meta"],
      "lithia/types": ["./src/types"],
      "lithia/studio": ["./src/studio"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "examples"]
}
